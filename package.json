{
  "name": "react-torchlight",
  "version": "1.0.12",
  "type": "module",
  "main": "dist/index.esm.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    },
    "./context": {
      "import": "./dist/context.esm.js",
      "types": "./dist/context.d.ts"
    },
    "./plugins/vite": {
      "import": "./dist/plugins/vite.esm.js",
      "types": "./dist/plugins/vite.d.ts"
    },
    "./plugins/typescript": {
      "import": "./dist/plugins/typescript.esm.js",
      "types": "./dist/plugins/typescript.d.ts"
    },
    "./types": {
      "import": "./dist/types.esm.js",
      "types": "./dist/types.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c && tsc --emitDeclarationOnly",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react",
    "tour",
    "spotlight",
    "tour",
    "torchlight",
    "walkthrough",
    "guide",
    "onboarding",
    "react19"
  ],
  "author": "Dominic Bryan Ingram",
  "license": "MIT",
  "description": "A React library for creating interactive tours and walkthroughs.",
  "repository": {
    "type": "git",
    "url": "https://github.com/dingram94/react-torchlight"
  },
  "dependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "rollup": "^2.79.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  }
}
